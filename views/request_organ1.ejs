    input[type="file"] {
        margin: 1px;
        margin-left: 22px;
        display: inline-block;
        background: linear-gradient(top, #f9f9f9, #e3e3e3);
        border-radius: 15px;
        padding: 5px 180px;
        outline: none;
        white-space: nowrap;
        cursor: pointer;
        text-shadow: 1px 1px #fff;
    }

    input[type="button"] {
        margin: 70;
        margin-left: 15%;
    }

    input[type="button"]:hover {
        color: white;
